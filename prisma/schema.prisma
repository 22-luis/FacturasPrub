
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// You need to set your DATABASE_URL in the .env file.
// Example for PostgreSQL: DATABASE_URL="postgresql://user:password@host:port/database_name"

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  REPARTIDOR
  SUPERVISOR
  ADMINISTRADOR
}

enum InvoiceStatus {
  PENDIENTE
  ENTREGADA
  CANCELADA
}

model User {
  id        String   @id @default(cuid())
  name      String
  role      UserRole
  password  String   // Remember to hash passwords before storing

  assignedInvoices Invoice[] @relation("AssignedInvoicesToUser")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invoice {
  id                 String        @id @default(cuid())
  invoiceNumber      String        @unique
  date               DateTime
  totalAmount        Decimal       @db.Decimal(10, 2) // Precision 10, Scale 2, suitable for currency
  supplierName       String
  uniqueCode         String        @unique
  address            String?       @db.Text
  status             InvoiceStatus @default(PENDIENTE)
  cancellationReason String?       @db.Text

  assigneeId String?
  assignee   User?   @relation("AssignedInvoicesToUser", fields: [assigneeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([assigneeId])
}

